                        const levelsToAdd = 100 - gameState.level;
                        if (levelsToAdd > 0) {
                            gameState.level = 100;
                            gameState.xp = 0;
                        }
                        gameState.money += 15000000;
                        return 'Level zv√Ω≈°en na 100 a z√≠skal jsi 15,000,000 Kƒç!';
                    }
                }
            };

