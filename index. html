                        [50, 51, 52].forEach(cropId => {
                            if (!gameState.inventory[cropId]) {
                                gameState.inventory[cropId] = 0;
                            }
                            gameState.inventory[cropId] += 1;
                        });
                        return 'Z√≠skal jsi v≈°echny secret plodiny (1x ka≈æd√°)!';
