            const SPECIAL_CODES = {
                'Level12studio': {
                    name: 'Level12studio',
                    reward: 'P≈ôid√° 12 level≈Ø',
                    apply: function(gameState) {
                        for (let i = 0; i < 12; i++) {
                            gameState.level++;
                            gameState.xp = 0; // Reset XP pro ka≈æd√Ω level
                        }
                        return 'Z√≠skal jsi +12 level≈Ø!';
                    }
                },
                'MoneyTree3': {
                    name: 'MoneyTree3',
                    reward: 'P≈ôid√° upgrade Strom penƒõz',
                    apply: function(gameState) {
                        // Najdeme upgrade "Strom penƒõz" (ID 16)
                        if (!gameState.upgrades.includes(16)) {
                            gameState.upgrades.push(16);
                            gameState.sellMultiplier += 1.0; // +100% cena prodeje
                            return 'Z√≠skal jsi upgrade Strom penƒõz (+100% cena prodeje)!';
                        } else {
